{
  "root": true,
  "env": {
    "jest": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:jest/recommended"
  ],
  "plugins": [
    "jest"
  ],
  "rules": {
    "comma-dangle": ["error", "always-multiline"],
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quote-props": ["error", "consistent-as-needed"],
    "quotes": ["error", "single", {
      "avoidEscape": true
    }],
    "semi": ["error", "always"],
    "sort-keys": ["error"]
  }
}
